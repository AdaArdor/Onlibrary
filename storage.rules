rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images to their own folders
    match /list-covers/{allPaths=**} {
      allow read: if true; // Anyone can read list covers
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    match /book-covers/{allPaths=**} {
      allow read: if true; // Anyone can read book covers
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    match /profile-images/{allPaths=**} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
  }
}
