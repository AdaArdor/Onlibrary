rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if users are friends
    function areFriends(userId1, userId2) {
      let friendshipId1 = userId1 < userId2 ? userId1 + '_' + userId2 : userId2 + '_' + userId1;
      return exists(/databases/$(database)/documents/friendships/$(friendshipId1));
    }
    
    // Top-level books collection
    match /books/{bookId} {
      // Any authenticated user can read all books (for Explore feature)
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Top-level lists collection
    match /lists/{listId} {
      allow read: if request.auth != null &&
            (resource.data.userId == request.auth.uid ||
             areFriends(request.auth.uid, resource.data.userId));
      allow update, delete: if request.auth != null &&
                       resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles (to search by username)
      allow read: if request.auth != null;
      // Users can only write their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Friend requests collection
    match /friendRequests/{requestId} {
      // Can read if you're the sender or receiver
      allow read: if request.auth != null &&
             (resource.data.fromUserId == request.auth.uid ||
              resource.data.toUserId == request.auth.uid);
      // Can create if you're the sender
      allow create: if request.auth != null && request.resource.data.fromUserId == request.auth.uid;
      // Can update if you're the receiver (to accept/decline)
      allow update: if request.auth != null && resource.data.toUserId == request.auth.uid;
      // Can delete if you're the sender (to cancel) or receiver (to decline)
      allow delete: if request.auth != null && 
        (resource.data.fromUserId == request.auth.uid || resource.data.toUserId == request.auth.uid);
    }
    
    // Friendships collection
    match /friendships/{friendshipId} {
      allow read: if request.auth != null &&
             (resource.data.user1Id == request.auth.uid ||
              resource.data.user2Id == request.auth.uid);
      // Can create if you're one of the friends
      allow create: if request.auth != null && 
        (request.resource.data.user1Id == request.auth.uid || request.resource.data.user2Id == request.auth.uid);
      // Can delete if you're one of the friends
      allow delete: if request.auth != null && 
        (resource.data.user1Id == request.auth.uid || resource.data.user2Id == request.auth.uid);
    }
  }
}
